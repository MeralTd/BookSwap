
<div class="container">
    <div class="table-responsive">
        <div class="table-wrapper">
          <h1 class='content-title'>USERS</h1>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>User Id</th>
                <th>User Name</th>												
                <th>User Email</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <% if user.id != current_user.id %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.user_name %></td>
                    <td><%= user.email %></td>                        
                    <td>
                      <a class="button info" href="/show/<%= user.id%>">Profile</a>
                    </td>
                  </tr>                
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>        
</div>     

